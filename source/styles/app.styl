@import 'nib'
@import 'normalize.styl'


// Components

@import './components/header'
@import './components/main'
@import './components/characters'
@import './components/card'
@import './components/favourites'
@import './components/modal'
@import './components/footer'


// rules

body
  background #fefefe
  font-size 14px
  background #fefefe
  color #333

*
  box-sizing border-box

h1,h2,h3,h4,h5,h6
  font-weight: 400
  margin 30px 0 15px

h1
  font-size 2.8em
h2
  font-size 2em
h3
  font-size 1.825em
  line-height 1.4
h4
  font-size 1.5em
  font-weight 600
  line-height 1.2em
h5
  font-size 1.25em
  font-weight 400
  line-height 1.4em
  margin-bottom 15px
h6
  font-size 12px
  font-weight 600
  margin 0

p
  font-size 16px
  line-height 1.4em
  margin 0 0 10px
  &.description
    color #777

.subtitle
  font-weight 700
  color #777

textarea
  resize vertical

figure
  overflow hidden
  img
    display block

.wrapper
  max-width 1200px
  margin-left auto
  margin-right auto


select,
input
  background white
  border-radius .2em
  border 1px transparent solid
  outline none
  transition .3s ease-out
  &:focus
    border-color gray
select
  border-color #dedede
  color #666

.btn
  display inline-block
  padding .8em
  background red
  text-decoration none
  color white
  font-weight 700
  margin .3em 0
  transition all .2s ease-in
  &:hover
    background rgba(red, .9)
  &:active
    transform scale(0.8)
